{
  "extends": ["@boonagency/tslint"],
  "rules": {
    "no-unused-expression": [true, "allow-tagged-template"],
    "indent": [true, "spaces", 2],
    "no-console": {
      "options": ["debug", "info", "log", "dir", "time", "timeEnd", "trace"],
      "severity": "warn"
    },
    "variable-name": false,
    "no-var-requires": false
  },
  "linterOptions": {
    "exclude": ["config/**/*.js", "node_modules/**/*.ts", "coverage/lcov-report/*.js"]
  }
}
